<div class="row-fluid">
    <div class="span1">        
       <%  avatar_identity = comment.identity.avatar %> 
        <% if avatar_identity  == nil %>
            <i class="icon-user icon-5x"></i> 
        <% else %>
            <%= image_tag avatar_identity.photo.url(:small) %>       
        <% end %>
    </div>

    <% if identity.administrator or identity.id == comment.identity.id %>
        <% canDelete = true  %> 
    <% else %>
        <% canDelete = false  %>        
    <% end %>

    <div class="span7">
        <div class="comment-content">
            <div class="comments-info clearfix">
                <h4 class="pull-left"><a href="#"><%= comment.identity.name %></a></h4>
                <span class="comments-num pull-right">
                    <span class="label label-info"><%= cont %></span>
                    <% if canDelete %>
                        (<%=link_to 'Eliminar ', [comment.resource,comment], :confirm => 'Â¿Estas seguro?', :method => :delete %>)
                    <% end %>
                </span> 
            </div>
            <%= comment.text %>
            <div class="comments-info">               
                <br>
                <p><i class="pull-left"><i class="icon-calendar"></i> 
                    <%= comment.created_at.strftime("%d %b. %Y") %> | <%=comment.created_at.strftime("%H:%M")  %> 
                </i></p>
                <br>
            </div>
        </div>
    </div>
</div>
	