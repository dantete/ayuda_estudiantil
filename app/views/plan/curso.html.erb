<div class="container">
	<div class="row">
		<div class="span3">
			<div class="well" style="padding: 8px 0;">
				<ul class="nav nav-list">
					<li class="nav-header">Cursos</li>
						<% for course in @courses %>
              <% if course == @c %>
                <li class="active"><%= link_to course.name, malla_semestre_curso_path(@co.id, @s, course.id) %></li>
              <% else %>
                <li><%= link_to course.name, malla_semestre_curso_path(@co.id, @s, course.id) %></li>
              <% end %>
            <% end %>		
				</ul>
			</div>
		</div>
		<div class="span9">
			<div class="hero-unit">
				<h1 align="center"><%=@c.name%></h1>
			</div>
			
      <h3>Recursos(<%= @c.resources.count %>)</h3></br>
			
			<table  cellpadding="0" cellspacing="0" border="0" class="display" id="example">
        <thead>
          <tr>
            <th>Título</th>
            <th>Tipo</th>
            <th>Comentarios</th>
            <th>Profesor</th>
            <th>Nota obtenida</th>
            <th>Contiene código</th>
            <th>Ver</th>
          </tr>           
        </thead>
        <tbody>
          <% @c.resources.each do |resource| %>
           <tr>
            <td><%= resource.title %></td>
            <td><%= resource.resource_type %></td>
            <td align ="center"><%= resource.comments.count %></td>
            <td><%= resource.professor %></td>
            <td><%= resource.grade %></td>

            <td align ="center"><% if resource.tiene_codigo   %>
              <i class="icon-ok-sign "></i> 
            <% else %>
              <i class="icon-remove-sign "></i> 
            <% end %></td>

            
            
            <td><a class="btn" href="<%= resource_path(resource)%>" >
                <i class="icon-folder-open-alt icon-2x"></i></a></td>
                <%= link_to("Ver Recursos", malla_semestre_curso_path(@co.id, @s, course.id), {:class => 'btn'}) %> 

          </tr>
        <% end %>
      </tbody>
    </table>

		</div>
	</div>
</div>
