
<h1>Lista de cursos</h1>
<body>
  <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>           
    </thead>
    <tbody>
     <% @courses.each do |course| %>
     <tr>
      <td><%= course.name %></td>
      <td><%= course.description %></td>
      <td><%= link_to 'Ver', course %></td>
      <td><%= link_to 'Editar', edit_course_path(course) %></td>
      <td><%= link_to 'Eliminar', course, method: :delete, data: { confirm: '¿Estás seguro de eliminar?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to 'New Course', new_course_path, {:class => ' btn btn-primary'} %>
</body>



