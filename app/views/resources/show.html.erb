<legend><h1>Recurso</h1></legend>

<div class="container-fluid">
	<div class="row-fluid">
		<div class="hero-unit">
			<h1><%= @resource.title %></h1>
			<p><%= @resource.description %></p>
			<p><%=  link_to("Download",  @resource.file.url(:original,false), {:class => 'btn btn-primary btn-large'}) %></p>
		</div>

		<div class="row-fluid">
			<div class="span6">
				<h2>Tipo de recurso</h2>
				<%= @resource.resource_type %>   
			</div>
			<div class="span6">
				<h2>Contiene c√≥digo</h2>
				<%= @resource.tiene_codigo %>
			</div>
		</div>

		<div class="row-fluid">
			<div class="span6">
				<h2>Profesor</h2>
				<%= @resource.professor %>
			</div>
			<div class="span6">
				<h2>Nota</h2>
				<%= @resource.grade %>
			</div>
		</div><!--/span6-->

		<div class="page-header">
            <legend>Comentarios(<%=  @resource.comments.count%>)</legend>
        </div>

        <!--/lista de comentarios-->
        <%  cont = 0 %>       
        <% @resource.comments.each do |comment| %>
            <%  cont = cont+1 %>
            <%= render "comments/comment" , :comment => comment,:cont => cont, :identity => @identity %>
        <% end %>

        <!-- AddComment Form -->        
        <div class="row-fluid">
            <div class="padding">                
                <legend>Escribe tu comentario</legend>
                <%= render "comments/form" %>  
            </div>
        </div><!-- Comment Form Ends-->
        

    </div><!--/row-fluid -->   
</div><!--/.fluid-container-->               


