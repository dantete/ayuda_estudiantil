<h1>Crear recurso</h1>
<%# @identity.resources.build %>
<%= form_for ([@identity, @resource]) do |r_form| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> El recurso no fue creado:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= r_form.label :Tipo_Recurso %><br />
    <%= r_form.text_field :resource_type %>
  </div>
 
  <div class="field">
    <%= r_form.label :Descripcion %><br />
    <%= r_form.text_area :description %>
  </div>

  <div class="actions">
    <%= r_form.submit %>
  </div>
<% end %>