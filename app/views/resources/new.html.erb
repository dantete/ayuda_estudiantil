<h1>Crear recurso</h1>

<%= form_for ([@identity, @resource]), :html => {:multipart => true} do |r_form| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> El recurso no fue creado:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= render 'form' , :r_form => r_form%>

  <br>
  <div class="actions">
    <%= r_form.submit "Crear" %>
  </div>
<% end %>